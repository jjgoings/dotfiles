# Science + Nature style with Paul Tol colors
# Helvetica 7pt, thin lines, ticks on all sides, no grid

# Color cycle: SciencePlots default
# blue, green, orange, red, purple, dark grey, light grey
axes.prop_cycle : cycler('color', ['0C5DA5', '00B945', 'FF9500', 'FF2C00', '845B97', '474747', '9e9e9e'])

# Figure size (Nature single column)
figure.figsize : 3.3, 2.5
figure.dpi : 600

# Font: Helvetica, 7pt
font.family : sans-serif
font.sans-serif : Helvetica, DejaVu Sans, Arial, sans-serif
font.size : 7
axes.labelsize : 7
xtick.labelsize : 7
ytick.labelsize : 7
legend.fontsize : 7
axes.titlesize : 8
axes.titleweight : regular

# LaTeX rendering for math
text.usetex : True
text.latex.preamble : \usepackage{amsmath} \usepackage{amssymb} \usepackage{sfmath}

# Axes
axes.linewidth : 0.5
axes.formatter.use_mathtext : True
axes.grid : False
axes.spines.top : True
axes.spines.right : True
axes.labelweight : regular

# X axis - ticks in, visible on top, minor ticks
xtick.direction : in
xtick.major.size : 3
xtick.major.width : 0.5
xtick.minor.size : 1.5
xtick.minor.width : 0.5
xtick.minor.visible : True
xtick.top : True

# Y axis - ticks in, visible on right, minor ticks
ytick.direction : in
ytick.major.size : 3
ytick.major.width : 0.5
ytick.minor.size : 1.5
ytick.minor.width : 0.5
ytick.minor.visible : True
ytick.right : True

# Lines
lines.linewidth : 1.0
lines.markersize : 3

# Legend
legend.frameon : True
legend.facecolor : white
legend.framealpha : 0.7
legend.edgecolor : none

# Boxplot
boxplot.medianprops.color : black
boxplot.medianprops.linewidth : 1.0
boxplot.flierprops.marker : o
boxplot.flierprops.markersize : 3

# Images
image.cmap : cividis
image.aspect : equal

# Scatter
scatter.edgecolors : white

# Saving
savefig.bbox : tight
savefig.pad_inches : 0.05
savefig.dpi : 600
